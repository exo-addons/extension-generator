<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>extension-generator</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.exoplatform.addons.staging:staging-extension-*:jar</include>
				<include>${project.groupId}:extension-generator-service:jar</include>
			</includes>
			<scope>provided</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>webapps</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>${project.groupId}:extension-generator-portlet:war</include>
			</includes>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
</assembly>
